{
  "$schema": "https://json-schema.org/schema",
  "title": "Deploy to Supabase",
  "description": "Deploy Edge Functions and push migrations to Supabase cloud",
  "type": "object",
  "properties": {
    "supabaseDirectory": {
      "type": "string",
      "description": "Path to supabase directory"
    },
    "projectRef": {
      "type": "string",
      "description": "Supabase project reference ID"
    },
    "functions": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Specific functions to deploy (deploys all if not specified)"
    },
    "deployFunctions": {
      "type": "boolean",
      "description": "Deploy Edge Functions",
      "default": true
    },
    "pushMigrations": {
      "type": "boolean",
      "description": "Push pending migrations",
      "default": true
    },
    "noVerifyJwt": {
      "type": "boolean",
      "description": "Deploy functions without JWT verification",
      "default": false
    }
  },
  "required": ["supabaseDirectory"]
}
